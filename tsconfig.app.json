{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.tsx"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "isolatedModules": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["components/*"],
      "@views/*": ["views/*"],
      "@utils/*": ["utils/*"],
      "@router/*": ["router/*"],
      "@assets/*": ["assets/*"]
    },
    "types": ["node", "jsdom"]
  }
}
